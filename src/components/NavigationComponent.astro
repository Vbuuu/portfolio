---
const currentPath = Astro.url.pathname;
---

<nav class='navigationBar'>
  <ul class='navigationItemList'>
    <li>
      <a
        href='/'
        class={'navItem' + (currentPath === '/' ? ' navItemSelected' : '')}
        >About
      </a>
    </li>
    <li>
      <a
        href='/blog'
        class={'navItem' +
          (currentPath.startsWith('/blog') ? ' navItemSelected' : '')}
        >Blog
      </a>
    </li>
    <li>
      <a
        href='/projects'
        class={'navItem' +
          (currentPath.startsWith('/projects') ? ' navItemSelected' : '')}
        >My Projects
      </a>
    </li>
  </ul>
</nav>
