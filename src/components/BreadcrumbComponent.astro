---
import '../styles/BreadcrumbComponent.css';

// I don't know how to do this cleaner :(
const currentPath = Astro.url.pathname;
var splittedPath = currentPath.split('/').slice(1);
if (currentPath.charAt(currentPath.length - 1) == '/') {
  splittedPath = currentPath.split('/').slice(1, -1);
}
---

<ol class='breadcrumbList'>
  {
    splittedPath.map((text, index) =>
      splittedPath.length - 1 === index ? (
        <li class='breadcrumbsItem'>{text}</li>
      ) : (
        <a class='breadcrumbsItem' href={`/${text}`}>
          {text}
        </a>
      ),
    )
  }
</ol>
